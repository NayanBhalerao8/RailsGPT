<div class="blog-post-full">
  <% if notice.present? %>
    <div class="notice"><%= notice %></div>
  <% end %>

  <div class="blog-header">
    <h1 class="blog-title"><%= @blog_post.title %></h1>
    <div class="blog-actions">
      <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "btn btn-primary" %>
      <%= link_to "Back to posts", blog_posts_path, class: "btn btn-secondary" %>
      <%= button_to "Delete post", blog_post_path(@blog_post), 
          method: :delete, 
          class: "btn btn-danger",
          data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
    </div>
  </div>

  <div class="blog-post-full-content">
    <%= @blog_post.content %>
  </div>

  <% if @blog_post.image.attached? %>
    <%= image_tag @blog_post.image, class: "blog-post-full-image" %>
  <% else %>
    <div class="loading-indicator">
      <p>Generating AI Image...</p>
    </div>
  <% end %>
</div>
